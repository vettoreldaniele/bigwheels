package(default_visibility = ["//visibility:public"])

cc_library(
    name = "YetiSDK",
    hdrs = glob([
        "sysroot/usr/include/ggp_c/*.h",
        "sysroot/usr/include/vulkan/*.h",
    ]),
    includes = [
        "sysroot/usr/include",
    ],
    deps = [
        ":libvulkan",
        ":libggp",
    ],
)

cc_import(
    name = "libvulkan",
    shared_library = "sysroot/lib/libvulkan.so",
)

cc_import(
    name = "libggp",
    shared_library = "sysroot/lib/libggp.so",
)
